<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.Edit_Profile_Activity"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:background="@drawable/bottom_curve_background"
        android:backgroundTint="@color/blue">
        <LinearLayout
            android:id="@+id/linearlayout"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profileimg"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/userprofileimage"
                android:layout_gravity="center"/>
            <ImageView
                android:id="@+id/edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/s_edit_icon"
                android:layout_gravity="right"
                android:layout_marginTop="-15dp"
                android:layout_marginLeft="45dp">

            </ImageView>
            <TextView
                android:id="@+id/id"
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:text="id">

            </TextView>


        </LinearLayout>

    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:orientation="vertical">
            <TextView
                android:drawableLeft="@drawable/icon_user"
                android:drawablePadding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:gravity="left"
                android:textStyle="bold"
                android:text="UserName">

            </TextView>
            <EditText
                android:id="@+id/username"
                android:inputType="text"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:background="@drawable/background"
                android:backgroundTint="@color/text_box_colour"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:hint="Enter your Username"
                android:textColorHint="@color/gray">

            </EditText>
            <TextView
                android:drawableLeft="@drawable/icon_mail"
                android:drawablePadding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:gravity="left"
                android:textStyle="bold"
                android:text="Gmail_Id">

            </TextView>
            <EditText
                android:id="@+id/mail"
                android:inputType="textEmailAddress"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:background="@drawable/background"
                android:backgroundTint="@color/text_box_colour"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:hint="Enter your Mail_Id"
                android:textColorHint="@color/gray">

            </EditText>


            <TextView
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/icon_password"
                android:drawablePadding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Password">

            </TextView>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="password_toggle"
                app:endIconTint="#000000"
                app:hintTextColor="@color/black"
                android:textSize="14sp"
                app:hintAnimationEnabled="false"
                android:animateLayoutChanges="false"

                app:boxBackgroundMode="none"
                app:startIconTint="#000000">

                <EditText
                    android:id="@+id/password"
                    android:inputType="textPassword"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background"
                    android:backgroundTint="@color/text_box_colour"
                    android:textSize="14sp"
                    android:hint="Please Enter new password"
                    android:textColor="@color/black"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:textColorHint="@color/black">

                </EditText>
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_marginBottom="10dp"
                android:drawableLeft="@drawable/icon_password"
                android:drawablePadding="5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Confirm Password">

            </TextView>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:endIconMode="password_toggle"
                app:endIconTint="#000000"
                app:hintTextColor="@color/black"
                android:textSize="14sp"
                app:hintAnimationEnabled="false"
                android:animateLayoutChanges="false"

                app:boxBackgroundMode="none"
                app:startIconTint="#000000">

                <EditText
                    android:id="@+id/confirm_password"
                    android:inputType="textPassword"
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background"
                    android:backgroundTint="@color/text_box_colour"
                    android:textSize="14sp"
                    android:hint="confirm your new password"
                    android:textColor="@color/black"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="10dp"
                    android:textColorHint="@color/black">

                </EditText>
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/background"
                android:backgroundTint="@color/blue"
                android:gravity="center"
                android:padding="10dp"
                android:text="Save Changes"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold">

            </TextView>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>



</LinearLayout>